<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/theme_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/addedActivityImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_walking"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp">

        </ImageView>

        <TextView
            android:id="@+id/addedActivityBonusWaterIntake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/addedActivityDeleteButton"
            android:text="+250ml"
            android:textColor="@color/bonus_water_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/addedActivityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:text="Hard Walking"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <ImageButton
            android:id="@+id/addedActivityDeleteButton"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_baseline_clear_24">

        </ImageButton>


    </RelativeLayout>



</androidx.cardview.widget.CardView>